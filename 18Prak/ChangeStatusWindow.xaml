<Window x:Class="AutoTechCenterApp.ChangeStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменить статус заказа" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Выберите заказ:"/>
            <ComboBox Name="OrderComboBox" DisplayMemberPath="OrderID" SelectedValuePath="OrderID"/>

            <Label Content="Новый статус:"/>
            <TextBox Name="NewStatusTextBox"/>

            <Button Content="Изменить" Click="ChangeButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>